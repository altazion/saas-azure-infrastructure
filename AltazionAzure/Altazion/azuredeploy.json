{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentname": {
      "type": "string",
      "minLength": 1
    },
    "FrontOfficeName": {
      "type": "string",
      "minLength": 1
    },
    "FrontOfficeSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "sqlAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "sqlAdminLoginPassword": {
      "type": "securestring"
    },
    "egestcomName": {
      "type": "string",
      "minLength": 1
    },
    "egestcomCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "egestcomEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "egestcomRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    },
    "BackOfficeName": {
      "type": "string",
      "minLength": 1
    },
    "BackOfficeSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring"
    },
    "deploy-commercePackageFolder": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "WebDeploy package location. This path is relative to the _artifactsLocation parameter"
      }
    },
    "deploy-commercePackageFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the webdeploy package"
      }
    },
    "deploy-signagePackageFolder": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "WebDeploy package location. This path is relative to the _artifactsLocation parameter"
      }
    },
    "deploy-signagePackageFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the webdeploy package"
      }
    },
    "deploy-officePackageFolder": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "WebDeploy package location. This path is relative to the _artifactsLocation parameter"
      }
    },
    "deploy-officePackageFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the webdeploy package"
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('FrontOfficeName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('FrontOfficeSkuName')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "FrontOffice"
      },
      "properties": {
        "name": "[parameters('FrontOfficeName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[concat('front-', parameters('deploymentname'))]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('FrontOfficeName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('FrontOfficeName')))]": "Resource"
      },
      "properties": {
        "name": "[concat('front-', parameters('deploymentname'))]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('FrontOfficeName'))]"
      },
      "resources": [
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat('front-', parameters('deploymentname')))]"
          ],
          "tags": {
            "displayName": "deploy-commerce"
          },
          "properties": {
            "packageUri": "[concat(parameters('_artifactsLocation'), '/', parameters('deploy-commercePackageFolder'), '/', parameters('deploy-commercePackageFileName'), parameters('_artifactsLocationSasToken'))]",
            "dbType": "None",
            "connectionString": "",
            "setParameters": {
              "IIS Web Application Name": "[concat('front-', parameters('deploymentname'))]"
            }
          }
        },
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', concat('front-', parameters('deploymentname')))]"
          ],
          "tags": {
            "displayName": "deploy-signage"
          },
          "properties": {
            "packageUri": "[concat(parameters('_artifactsLocation'), '/', parameters('deploy-signagePackageFolder'), '/', parameters('deploy-signagePackageFileName'), parameters('_artifactsLocationSasToken'))]",
            "dbType": "None",
            "connectionString": "",
            "setParameters": {
              "IIS Web Application Name": "[concat('front-', parameters('deploymentname'))]"
            }
          }
        }
      ]
    },

    {
      "type": "Microsoft.Cache/Redis",
      "apiVersion": "2015-08-01",
      "name": "[concat('redis-', parameters('deploymentname'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "Standard",
          "family": "C",
          "capacity": 0
        },
        "enableNonSslPort": false,
        "redisConfiguration": {
          "maxclients": "256",
          "maxmemory-reserved": "2",
          "maxmemory-delta": "2"
        }
      }
    },
    {
      "name": "[variables('sqlName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "sql"
      },
      "properties": {
        "administratorLogin": "[parameters('sqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('egestcomName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlName'))]"
          ],
          "tags": {
            "displayName": "egestcom"
          },
          "properties": {
            "collation": "[parameters('egestcomCollation')]",
            "edition": "[parameters('egestcomEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('egestcomRequestedServiceObjectiveName')]"
          }
        }
      ]
    },
    {
      "name": "[parameters('BackOfficeName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('BackOfficeSkuName')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "BackOffice"
      },
      "properties": {
        "name": "[parameters('BackOfficeName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[variables('officeName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('BackOfficeName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('BackOfficeName')))]": "Resource",
        "displayName": "office"
      },
      "properties": {
        "name": "[variables('officeName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('BackOfficeName'))]"
      },
      "resources": [
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('officeName'))]"
          ],
          "tags": {
            "displayName": "deploy-office"
          },
          "properties": {
            "packageUri": "[concat(parameters('_artifactsLocation'), '/', parameters('deploy-officePackageFolder'), '/', parameters('deploy-officePackageFileName'), parameters('_artifactsLocationSasToken'))]",
            "dbType": "None",
            "connectionString": "",
            "setParameters": {
              "IIS Web Application Name": "[variables('officeName')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {},
  "variables": {
    "sqlName": "[concat('sql', uniqueString(resourceGroup().id))]",
    "officeName": "[concat('office', uniqueString(resourceGroup().id))]"
  }
}
